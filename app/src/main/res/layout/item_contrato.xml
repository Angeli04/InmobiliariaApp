<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Chip de Estado (Vigente / Finalizado) -->
        <com.google.android.material.chip.Chip
            android:id="@+id/chipVigente"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Vigente"
            tools:chipBackgroundColor="#C8E6C9"
            tools:textColor="#1B5E20" />

        <!-- Sección 1: Dirección e Inquilino -->

        <ImageView
            android:id="@+id/iconHome"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:srcCompat="@drawable/ic_home"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvDireccionInmueble"
            app:layout_constraintBottom_toBottomOf="@id/tvDireccionInmueble"
            app:tint="?attr/colorPrimary" />

        <TextView
            android:id="@+id/tvDireccionInmueble"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            android:textColor="?android:attr/textColorPrimary"
            app:layout_constraintEnd_toStartOf="@id/chipVigente"
            app:layout_constraintStart_toEndOf="@id/iconHome"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="San Martin 3456" />

        <ImageView
            android:id="@+id/iconPerson"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="8dp"
            app:srcCompat="@drawable/icon_profile"
            app:layout_constraintStart_toStartOf="@id/iconHome"
            app:layout_constraintTop_toBottomOf="@id/tvDireccionInmueble"
            app:tint="?android:attr/textColorSecondary" />

        <TextView
            android:id="@+id/tvNombreInquilino"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:textColor="?android:attr/textColorSecondary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iconPerson"
            app:layout_constraintTop_toTopOf="@id/iconPerson"
            app:layout_constraintBottom_toBottomOf="@id/iconPerson"
            tools:text="Perez, Carmela" />

        <!-- Línea Divisoria -->
        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="?android:attr/dividerVertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iconPerson" />

        <!-- Sección 2: Fechas y Monto (Stats) -->

        <LinearLayout
            android:id="@+id/statsLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:weightSum="3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider">

            <!-- Col 1: Fecha Desde -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Inicio"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Caption" />
                <TextView
                    android:id="@+id/tvFechaDesde"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                    android:textColor="?android:attr/textColorPrimary"
                    tools:text="01/12/2025" />
            </LinearLayout>

            <!-- Col 2: Fecha Hasta -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Finaliza"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Caption" />
                <TextView
                    android:id="@+id/tvFechaHasta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                    android:textColor="?android:attr/textColorPrimary"
                    tools:text="01/02/2026" />
            </LinearLayout>

            <!-- Col 3: Monto -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Monto"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Caption" />
                <TextView
                    android:id="@+id/tvMonto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                    android:textColor="?attr/colorPrimary"
                    android:textStyle="bold"
                    tools:text="$560.000" />
            </LinearLayout>

        </LinearLayout>

        <!-- Sección 3: Acción (Botón de Pagos) -->

        <ImageView
            android:id="@+id/iconCuotas"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="24dp"
            app:srcCompat="@drawable/ic_pay"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/statsLayout"
            app:layout_constraintBottom_toBottomOf="parent"
            app:tint="?android:attr/textColorSecondary" />

        <TextView
            android:id="@+id/tvCantidadCuotas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            tools:text="3 Cuotas"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
            android:textColor="?android:attr/textColorSecondary"
            app:layout_constraintStart_toEndOf="@id/iconCuotas"
            app:layout_constraintTop_toTopOf="@id/iconCuotas"
            app:layout_constraintBottom_toBottomOf="@id/iconCuotas" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnVerPagos"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ver Pagos"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/statsLayout"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
